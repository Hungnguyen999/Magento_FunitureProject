<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceContainer name="header.panel" remove="true"></referenceContainer>
        <referenceBlock name="copyright" remove="true"></referenceBlock>
        <referenceBlock name="form.subscribe" remove="true"></referenceBlock>

        <referenceContainer name="footer">
            <referenceBlock name="footer_links" remove="true" />
            <block class="Magento\Theme\Block\Html\Header\Logo" name="footer-logo">
                <arguments>
                    <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                    <argument name="logo_width" xsi:type="number">110</argument>
                    <argument name="logo_height" xsi:type="number">110</argument>
                    <argument name="logo_alt" xsi:type="string"></argument>
                </arguments>
            </block>
            <container name="footer.logo.ssss" htmlClass="footer-logo" htmlTag="div" label="Footer Logo Container" before="-" />

            <block class="Magento\Framework\View\Element\Template" name="footer.navigation.left" after="footer.navigation.left" template="Magento_Theme::footer_contact.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="footer.navigation.right" after="footer.navigation.contact" template="Magento_Theme::footer_menu.phtml"/>
            <block class="Magento\Theme\Block\Html\Footer" name="copyright1" template="Magento_Theme::html/copyright.phtml"/>
        </referenceContainer>
    </body>
</page>